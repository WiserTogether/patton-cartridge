#!/bin/bash -eu

source $OPENSHIFT_CARTRIDGE_SDK_BASH

case "$1" in
    -v|--version)
      version="$2"
esac

echo "$version" > ${OPENSHIFT_PATTON_DIR}env/OPENSHIFT_PYTHON_VERSION

mkdir -p ${OPENSHIFT_PATTON_DIR}template

# Call the version specific install script
exec ${OPENSHIFT_PATTON_DIR}usr/versions/${version}/bin/install $version

# Install additional libraries
# exec ${OPENSHIFT_PATTON_DIR}bin/install_additional
