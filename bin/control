#!/bin/bash -e

source $OPENSHIFT_CARTRIDGE_SDK_BASH

case $1 in
    update-configuration)
        source ${OPENSHIFT_PATTON_DIR}usr/versions/${OPENSHIFT_PYTHON_VERSION}/lib/update-configuration
        update-configuration $OPENSHIFT_PYTHON_VERSION
        ;;
    *)
        # Call the version specific control script
        exec ${OPENSHIFT_PATTON_DIR}usr/versions/${OPENSHIFT_PYTHON_VERSION}/bin/control "$@"
        ;;
esac
