#!/bin/bash

cd $OPENSHIFT_DATA_DIR
mkdir local_usr
wget ftp://ftp.gnu.org/gnu/libtool/libtool-2.4.2.tar.gz
wget http://www.aleksey.com/xmlsec/download/xmlsec1-1.2.19.tar.gz
 
tar -xvf libtool-2.4.2.tar.gz
cd libtool-2.4.2
./configure --prefix=$OPENSHIFT_DATA_DIR/local_usr
make
make install
export PATH=$OPENSHIFT_DATA_DIR/local_usr/bin:$PATH

export LD_LIBRARY_PATH=$OPENSHIFT_DATA_DIR/local_usr/lib:$LD_LIBRARY_PATH
export LIBRARY_PATH=$OPENSHIFT_DATA_DIR/local_usr/lib
export C_INCLUDE_PATH=$OPENSHIFT_DATA_DIR/local_usr/include
export CPLUS_INCLUDE_PATH=$OPENSHIFT_DATA_DIR/local_usr/include

 
cd $OPENSHIFT_DATA_DIR
tar -xvf xmlsec1-1.2.19.tar.gz
cd xmlsec1-1.2.19
./configure --prefix=$OPENSHIFT_DATA_DIR/local_usr
make
make install

cd $OPENSHIFT_DATA_DIR
rm libtool-2.4.2.tar.gz
rm xmlsec1-1.2.19.tar.gz
